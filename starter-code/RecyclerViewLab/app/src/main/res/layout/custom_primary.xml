<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90003153">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To The Second Activity"
        android:backgroundTint="#003153"
        android:layout_margin="20dp"
        android:id="@+id/list_item_to_next_page"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="-5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The title goes here"
                android:textColor="#e6e5e7"
                android:id="@+id/textView1a"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Your description here"
                android:textColor="#e6e5e7"
                android:id="@+id/textView2a"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/check_box1"
            android:text="Finished"
            android:textColor="#e6e5e7"
            android:layout_marginRight="-60dp"
            android:checked="false">
        </CheckBox>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#33003153"
        android:text="Delete"
        android:textStyle="bold"
        android:textColor="#e6e5e7"
        android:id="@+id/buttonRemove">
    </Button>
</LinearLayout>